{{include "partials/head" site page}}
<body>
	<div class="container">
		<div class="left-col">
			<header id="header" class="inner">{{include "partials/header" site page}}</header>
		</div>
		<div class="mid-col">
			<div class="mid-col-container">
				<div id="content" class="inner">
					<div itemscope itemtype="http://schema.org/Blog">
{{for postPage in page.HistoryPosts}}
					    <article class="post" itemprop="blogPost" itemscope itemtype="http://schema.org/BlogPosting">
							{{include "partials/article" site postPage}}
						</article>
{{end}}
				    </div>
				    <nav id="pagenavi">
{{if !page.HidePrevLink}}
					    <a href="{{site.BaseURL}}{{page.PrevLinkRelative}}" class="prev">Prev</a>
{{end}}
{{if !page.HideNextLink}}
					    <a href="{{site.BaseURL}}{{page.NextLinkRelative}}" class="next">Next</a>
{{end}}
					    <div class="center"><a href="{{site.BaseURL}}post/">Blog Archives</a></div>
					</nav>
				</div>
			</div>
			<footer id="footer" class="inner">{{include "partials/footer" site page}}</footer>
		</div>
	</div>
</body>
</html>
