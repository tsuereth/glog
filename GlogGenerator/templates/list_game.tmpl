{{include "partials/head" site page}}
<body>
	<div class="container">
		<div class="left-col">
			<header id="header" class="inner">{{include "partials/header" site page}}</header>
		</div>
		<div class="mid-col">
			<div class="mid-col-container">
				<div class="gameinfo">
					<div class="title">{{page.Title}}</div>
{{if page.IgdbUrl}}
					<p class="link">Metadata from <a href="{{page.IgdbUrl}}">IGDB</a></p>
{{end}}
{{if page.Tags}}
					<div class="tags">{{for tag in page.Tags}}<a href="{{site.BaseURL}}tag/{{string_urlize tag}}">{{tag}}</a>{{if !for.last}}, {{end}}{{end}}</div>
{{end}}
{{if page.RelatedGames}}
					<div class="games">Related games: {{for game in page.RelatedGames}}<a href="{{site.BaseURL}}game/{{string_urlize game}}">{{game}}</a>{{if !for.last}}, {{end}}{{end}}</div>
{{end}}
				</div>
				<div id="content" class="inner">
					{{include "partials/archive" site page}}
				</div>
			</div>
			<footer id="footer" class="inner">{{include "partials/footer" site page}}</footer>
		</div>
	</div>
</body>
</html>
